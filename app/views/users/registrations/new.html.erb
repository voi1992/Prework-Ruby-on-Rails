<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <h2>Sign up</h2>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: "sr-only" %><br/>
      <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "sr-only" %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "sr-only" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Re-password", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :birth, class: "sr-only" %><br/>
      <%= f.date_field :birth , class: "form-control",placeholder:"Birthday" %>
    </div>

    <div class="field">
      <%= f.label :name, class: "sr-only" %><br/>
      <%= f.text_field :name, autocomplete: "off", placeholder: "Name", class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :telephone, class: "sr-only" %> <br/>
      <%= f.text_field :telephone, autocomplete: "off", placeholder: "Telephone", class: "form-control" %>
    </div>


    <div class="actions">
      <%= f.submit "Sign up", class:"btn-primary",style: "margin-top:20px" %>
    </div>
    <%= render "users/shared/links" %>


<% end %>

